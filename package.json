{
  "name": "tc-create-app",
  "homepage": "https://create.translationcore.com/",
  "version": "1.0.2",
  "license": "MIT",
  "private": false,
  "bugs": {
    "url": "https://github.com/unfoldingWord/tc-create-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unfoldingWord/tc-create-app"
  },
  "scripts": {
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build && mv styleguide build",
    "start": "rescripts start",
    "build": "cross-env NODE_ENV=production rescripts build && yarn styleguide:build",
    "electron:build": "react-scripts build",
    "deploy": "git push",
    "cypress:open": "REACT_APP_DOOR43_SERVER_URL=https://jfvoldksj.door43.org NODE_ENV=test cypress open",
    "cypress:run": "NODE_ENV=test cypress run --record",
    "test:cov": "yarn cypress:run && nyc report --reporter=json-summary --reporter=text-summary",
    "test:unit": "jest __tests__ && type ./coverage/lcov.info | coveralls",
    "test": "start-test 3000 test:cov",
    "create-coverage-badge": "bash scripts/create-badge-json.sh"
  },
  "dependencies": {
    "@material-ui/core": "^4.7.2",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/lab": "^4.0.0-alpha.35",
    "@material-ui/styles": "^4.7.1",
    "axios": "^0.19.0",
    "datatable-translatable": "0.8.9",
    "deep-freeze": "^0.0.1",
    "gitea-react-toolkit": "1.1.0",
    "markdown-translatable": "^1.0.2-rc.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-headroom": "^3.0.0",
    "react-select": "^3.0.4",
    "react-waypoint": "^9.0.2",
    "scripture-resources-rcl": "1.0.1-rc.3",
    "use-deep-compare-effect": "1.3.1",
    "usfm-js": "^2.0.2"
  },
  "devDependencies": {
    "@cypress/code-coverage": "1.10.4",
    "@rescripts/cli": "^0.0.13",
    "@rescripts/rescript-env": "^0.0.11",
    "@testing-library/react-hooks": "^3.4.1",
    "@types/jest": "^26.0.7",
    "@unfoldingword/eslint-config": "^1.1.0",
    "babel-loader": "8.0.5",
    "babel-plugin-istanbul": "5.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "coveralls": "^3.0.9",
    "cross-env": "^7.0.2",
    "css-loader": "^3.2.0",
    "cypress": "4.8.0",
    "eslint-plugin-chai-friendly": "0.5.0",
    "eslint-plugin-cypress": "2.7.0",
    "eslint-plugin-jest": "22.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "7.12.4",
    "file-loader": "^4.2.0",
    "istanbul-lib-coverage": "2.0.5",
    "lodash": "^4.17.15",
    "nyc": "14.1.1",
    "react-scripts": "3.0.1",
    "react-styleguidist": "10.4.0",
    "react-test-renderer": "^16.13.1",
    "start-server-and-test": "^1.10.6",
    "style-loader": "^1.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "rescripts": [
    "env"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "nyc": {
    "excludeAfterRemap": false,
    "exclude": [
      "**/*.spec.js"
    ],
    "include": [
      "**/components/**/**.js",
      "**/components/**.js"
    ]
  }
}